{
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm --recursive --parallel --stream run dev",
    "mock": "pnpm -C mock mock",
    "build": "pnpm --recursive --parallel --stream run build",
    "preview": "pnpm --recursive --parallel --stream run preview",
    "check": "echo ✔︎ Checking frontend && pnpm --recursive --parallel --stream run lint && pnpm --recursive --stream run check",
    "format": "echo 🖌️ Formatting frontend && prettier --write . --plugin=prettier-plugin-astro",
    "lint": "echo 🚨 Linting frontend && npm-run-all --parallel lint:eslint lint:stylelint",
    "lint:eslint": "eslint --fix --ext .js,.jsx,.ts,.tsx,.astro,.vue --ignore-path .gitignore .",
    "lint:stylelint": "stylelint --fix \"**/*.{css,scss,sass}\" --allow-empty-input --config packages/config/stylelint.config.cjs",
    "test": "pnpm --recursive --parallel --stream run test"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/eslint": "^8.56.5",
    "@types/node": "^20.11.25",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitest/coverage-v8": "^1.3.1",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^13.0.0",
    "astro-eslint-parser": "^0.16.3",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^0.31.4",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-prettier-vue": "^5.0.0",
    "eslint-plugin-vue": "^9.22.0",
    "happy-dom": "^13.7.3",
    "npm-run-all2": "^6.1.2",
    "postcss": "^8.4.35",
    "prettier": "3.2.5",
    "prettier-plugin-astro": "~0.13.0",
    "prettier-plugin-tailwindcss": "~0.5.12",
    "process-envify": "^2.0.0",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "unocss": "^0.58.5",
    "vite": "^5.1.5",
    "vitest": "^1.3.1"
  }
}
