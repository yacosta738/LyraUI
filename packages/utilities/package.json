{
  "name": "@lyra/utilities",
  "version": "0.0.1",
  "description": "A collection of utilities for Lyra",
  "type": "module",
  "main": "./dist/utilities.js",
  "module": "./dist/utilities.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/utilities.js",
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/utilities.js"
      }
    }
  },
  "files": [
    "package.json",
    "dist"
  ],
  "scripts": {
    "build:types": "tsc --build",
    "build:vite": "vite build",
    "dev": "echo \"DEV: üü¢ Starting with dev mode\" && vite build -- --watch",
    "build": "run-p build:vite build:types",
    "preview": "vite preview",
    "check": "run-s build:types build:vite",
    "clean": "rm -rf dist",
    "test": "echo \"‚ö†Ô∏è No tests available for now (vitest)\" && exit 0"
  },
  "keywords": [
    "lyra",
    "utilities"
  ],
  "author": "Yuniel Acosta <www.yunielacosta.com>",
  "license": "MIT",
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@lyra/config": "workspace:^",
    "@lyra/tsconfig": "0.0.1",
    "@types/lodash": "^4.17.0",
    "vite-plugin-dts": "^3.7.3",
    "typescript": "^5.4.2"
  }
}
